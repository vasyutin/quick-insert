{
   "manifest_version": 2,
   "name": "Quick Insert",
   "version": "1.0",
   "description": "Quickly insert frequently used text strings into input fields",
   "permissions": [
      "activeTab",
      "storage"
   ],
   "browser_action": {
      "default_title": "Quick Insert",
      "default_popup": "popup.html",
      "default_icon": {
         "16": "icons/quick-insert-icon.svg",
         "32": "icons/quick-insert-icon.svg",
         "48": "icons/quick-insert-icon.svg",
         "64": "icons/quick-insert-icon.svg",
         "96": "icons/quick-insert-icon.svg",
         "128": "icons/quick-insert-icon.svg"
      }
   },
   "icons": {
      "16": "icons/quick-insert-icon.svg",
      "32": "icons/quick-insert-icon.svg",
      "48": "icons/quick-insert-icon.svg",
      "64": "icons/quick-insert-icon.svg",
      "96": "icons/quick-insert-icon.svg",
      "128": "icons/quick-insert-icon.svg"
   },
   "background": {
      "scripts": [
         "background.js"
      ],
      "persistent": false
   },
   "options_ui": {
      "page": "settings.html",
      "browser_style": true
   },
   "applications": {
      "gecko": {
         "id": "quick-insert@unknown.com"
      }
   }
}